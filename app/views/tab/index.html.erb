<div class="TabIndex">
	<%
		if @promotion
	%>
		<span class="CurrentPromotion">
			<span class="Thumbnail">
				<img src="<%=@promotion.get_image_path%>">
			</span>
			<span class="Detail">
				<span class="Name"><%=@promotion.name%></span>
				<span class="Description">
					<%=@promotion.description%>
				</span>
				<span class="Restaurant">
					<%=@restaurant.name%>
				</span>
				<span class="Quota">
					<%=@promotion.collected_count%> / <%=@promotion.total%>
				</span>
				<span class="ExpirationDate">
					หมดอายุ <%=@promotion.end_date.to_thai_date%>
				</span>
			</span>
		</span>
	<%
		else
	%>
		คุณยังไม่ได้ตั้งค่าโปรโมชั่นใด ๆ กรุณไปหลังบ้าน
	<%
		end
	%>
</div>